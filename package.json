{
  "name": "am20",
  "version": "1.0.0",
  "description": "Build system for am20 Website",
  "main": "event.js",
  "scripts": {
    "watch:css": "npx tailwindcss -i ./src/style.css -o ./dist/style.css --watch",
    "watch:js": "npm-run-all --parallel watch:script watch:event",
    "watch:script": "npx terser src/script.js -o dist/script.min.js --compress --mangle --watch",
    "watch:event": "npx terser src/form.js -o dist/form.min.js --compress --mangle --watch",
    "watch": "npm-run-all --parallel watch:css watch:js",

    "minify:tailwind": "postcss src/style.css -o dist/style.css",
    "minify:custom-css": "cross-env NODE_ENV=production postcss src/style.css -o dist/style.min.css",

    "build:js": "npx terser src/script.js -o dist/script.min.js --compress --mangle && npx terser src/form.js -o dist/form.min.js --compress --mangle",
    "build": "npm run minify:tailwind && npm run build:js"
  },
  "keywords": [
    "tailwind",
    "am20",
    "postcss",
    "terser"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cross-env": "^10.1.0",
    "cssnano": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.4",
    "terser": "^5.44.0"
  }
}
